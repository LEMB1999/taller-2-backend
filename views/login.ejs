<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Login</title>
    <style>
          .container-form-login{
             display: flex;
             flex-direction: column;
             padding:10px;
             row-gap: 5px;
             max-width: 500px;
             margin:200px auto 0 auto;
          }

          input[placeholder='email']{
             padding: 5px;
          }

          input[placeholder='password']{
             padding: 5px;
          }

          #btn-login{
            padding:5px;
            cursor: pointer;
          }

          

    </style>
</head>
<body>

     <div class="container-form-login">
         <input type="email" placeholder="email">
         <input type="password" placeholder="password">
         <button id="btn-login" >Login</button>
     </div>


     <script>

        document.addEventListener("DOMContentLoaded",()=>{

            const btnElement = document.querySelector("#btn-login");
            const emailElement = document.querySelector("input[placeholder='email']"); 
            const passwordElement = document.querySelector("input[placeholder='password']"); 

            btnElement.addEventListener("click",async ()=>{
                 
                const email = emailElement.value;
                const password = passwordElement.value;

                const response = await fetch("http://localhost:3000/login",{
                    method:"POST",
                    headers:{
                        "Content-Type":"application/json",
                        "Accept":"application/json"
                    },
                    body:JSON.stringify({email,password})
                });

                const data = await response.json();
                window.location.replace("http://localhost:3000/contacts");

            })


        })


     </script>
    
</body>
</html>